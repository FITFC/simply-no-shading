{
  "schemaVersion": 1,
  "id": "simply-no-shading",
  "version": "${version}",

  "name": "Simply No Shading",
  "description": "This mod, by default, mimics OptiFine's Internal Shader with Old Lighting OFF. The benefit is the absence of lag that is present to any shader, including Internal Shader. You also have the freedom to select which and which not this mod affects and may bind keys to toggle them in-game, though it hasn't yet supported every possible feature.",
  "authors": [
    "StartsMercury"
  ],
  "contributors": [
    "IMS#7902"
  ],
  "contact": {
    "homepage": "https://www.curseforge.com/minecraft/mc-mods/simply-no-shading",
    "sources": "https://github.com/StartsMercury/simply-no-shading",
    "issues": "https://github.com/StartsMercury/simply-no-shading/issues"
  },

  "license": "MIT",
  "icon": "assets/simply-no-shading/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "com.github.startsmercury.simplynoshading.entrypoint.SimplyNoShadingClientMod"
    ],
    "modmenu": [
      "com.github.startsmercury.simplynoshading.entrypoint.SimplyNoShadingModMenu"
    ]
  },
  "accessWidener" : "simply-no-shading.accesswidener",
  "mixins": [
    "simply-no-shading.minecraft.mixins.json",
    "simply-no-shading.sodium.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=${loader_version}",
    "java": ">=17",
    "minecraft": ">=${minecraft_version}"
  },
  "suggests": {
    "fabric-api": ">=${fabric_version}",
    "modmenu": ">=${modmenu_version}",
    "sodium": ">=${sodium_version}"
  }
}
